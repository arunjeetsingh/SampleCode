<Window x:Class="WPFLauncherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFLauncherApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button x:Name="LaunchTargetApp" Content="Launch Target App" HorizontalAlignment="Center" VerticalAlignment="Center" Click="LaunchTargetApp_Click" />
            <TextBlock x:Name="Status" Foreground="Red" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
